{
  "kind": "collectionType",
  "collectionName": "dishes",
  "info": {
    "name": "Dish"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "ingredients": {
      "collection": "ingredient"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "calories": {
      "type": "integer"
    },
    "net_carbs": {
      "type": "decimal"
    },
    "cooking_method": {
      "model": "cooking-method",
      "via": "dishes"
    },
    "dish": {
      "type": "enumeration",
      "enum": [
        "Breakfast",
        "Lunch",
        "Dinner",
        "Dessert",
        "Snack"
      ]
    },
    "meal": {
      "via": "dishes",
      "model": "meal"
    }
  }
}
